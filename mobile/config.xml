<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.vitemadose" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ViteMaDose</name>
    <description>
        Trouver un centre de vaccination avec des doses de vaccin disponibles
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        CovidTracker
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
<!--    <allow-intent href="tel:*" />-->
<!--    <allow-intent href="sms:*" />-->
<!--    <allow-intent href="mailto:*" />-->
<!--    <allow-intent href="geo:*" />-->
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
